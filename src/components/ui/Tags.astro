---
export interface Props {
	tags?: string[];
}

const { tags } = Astro.props;
---

{
	tags && (
		<div class="mt-2 w-full flex lg:w-5/12">
			{tags.map((tag) => (
				<p class="bg-orange inline-block rounded-sm  px-1.5 mr-1 text-sm text-black">
					{tag}
				</p>
			))}
		</div>
	)
}
